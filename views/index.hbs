<form class="mt-5" id="brandList">
  <div class="form-group mb-3">
    <label for="brandInput">Бренд</label>
    <input id="brandInput" type="text" class="form-control" placeholder="Начните набирать и выберите из списка"
      list="brandDatalist" multiple name="search">
    <div class="input-group-append">
    </div>
  </div>
</form>

<datalist id="brandDatalist">
  {{#each brands}}
  <option id="{{brand_id}}" value="{{name}}">
    {{/each}}
</datalist>

<form class="mt-4" id="modelsList" style="display: none">
  <div class="form-group mb-3">
    <label for="modelInput">Модель</label>
    <input id="modelInput" type="text" class="form-control" placeholder="Начните набирать и выберите из списка"
      list="modelsDatalist" multiple name="search">
    <div class="input-group-append">

    </div>
  </div>
</form>

<datalist id="modelsDatalist">
  <option id="{{brand_id}}" value="{{name}}">
</datalist>

<div id="info" class="mt-5">

</div>

<script defer src="/js/search.js"></script>
